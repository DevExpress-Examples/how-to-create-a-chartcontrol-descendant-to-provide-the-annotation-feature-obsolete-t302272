<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:mdxc="clr-namespace:MyChartControl"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="mdxc:AnotationPresenter">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="mdxc:AnotationPresenter">
                        <Border BorderThickness="{Binding Path=BorderThickness}" BorderBrush="{Binding Path=BorderColor}">
                            <TextBlock Text="{Binding Path=Text}" Background="{Binding Path=Background}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>